<div>
  <div class="subcard">

    <h2>Edit your task</h2>
    <%= form_for(@task) do |t| %>

      <div class="form-group">
        <%= t.label :title %>
        <%= t.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t.label :details %>
        <%= t.text_field :details, class: 'form-control' %>
      </div>

      <%= t.submit class: 'btn btn-primary' %>

      <%= t.check_box :completed, {}, "true", "false" %>
      <%= t.label :completed, "This task is completed" %>
    <% end %>

    <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
  </div>
</div>
