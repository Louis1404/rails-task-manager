<div>
  <h2>New task</h2>
    <div class="subcard">
    <%= form_for(@task) do |t| %>
      <div class="form-group">
        <%= t.label :title %>
        <%= t.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= t.label :details %>
        <%= t.text_field :details, class: 'form-control' %>
      </div>

      <%= t.submit class: 'btn btn-primary' %>
    <% end %>

    <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
  </div>
</div>
